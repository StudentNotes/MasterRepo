@*Moje Uczelnie -> Konkretna Uczelnia -> Konkretny semestr -> Konkretny przedmiot -> Widok na poszczególne notatki*@
@using StudentNotes.Logic.LogicModels
@model List<StudentNotes.Logic.LogicModels.Note>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Lp.</th>
            <th>Nazwa</th>
            <th>Kategoria</th>
            <th>Rozmiar</th>
            <th>Data wstawienia</th>
            <th>Tagi</th>
            <th></th>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>
                <img class="img-rounded" src="@CategorySelector.GetCategoryPicturePath(Model[i].Category)" style="max-height: 34px;" />
                @Model[i].Name
            </td>
            <td>@Model[i].Category</td>
            <td>@Model[i].Size</td>
            <td>@Model[i].UploadDate.ToString()</td>
            <td>
                @foreach (var tag in @Model[i].Tags)
                {
                    <text>@tag,</text>
                }
            </td>
            <td>
                <button class="btn btn-danger">Duuuuzy guzik</button>
            </td>
        </tr>
    }
</table>         


