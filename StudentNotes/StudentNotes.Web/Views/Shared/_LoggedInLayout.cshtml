@using StudentNotes.Web.Models.ResourcesFinderLogic;
@model StudentNotes.Logic.Authorization.StudentNotesUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/Content/custom-logged-in.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-top-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="index.html">@ResourceKeyResolver.ConstStudentNotes</a>*@
                @Html.ActionLink(ResourceKeyResolver.ConstStudentNotes, "Logoff", "Account", null, new { @class = "navbar-brand" })
            </div>
            <!-- Top Menu Items -->
            @Html.Partial("~/Views/Partials/NavbarTopPartial.cshtml", Model)

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @Html.Partial("~/Views/Partials/NavbarSidePartial.cshtml")
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>

    <!-- Upload File Modal -->
    @Html.Partial("~/Views/Partials/TopMenu/UploadFilePartial.cshtml")

    <!-- Add University Modal -->
    @Html.Partial("~/Views/Partials/TopMenu/AddUniversityPartial.cshtml")

    <!-- Add Group Modal -->
    @Html.Partial("~/Views/Partials/TopMenu/AddGroupPartial.cshtml")


<script>
    function fileSelected() {
        var fileInput = document.getElementById("fileInput");
        var files = fileInput.files;

        var allFiles = "";

        for (var i = 0; i < files.length; i++) {
            allFiles += files[i].name;
            allFiles += "<br>";
        }

        document.getElementById("filePath").innerHTML = allFiles;
    }
</script>

<!-- jQuery -->
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <!--Bootstrap Core JavaScript-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Custom JavaScript-->
    <!--script src="~/Scripts/custom.js"></!--script>

    <!--Plugin JavaScript files-->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

</body>
</html>
